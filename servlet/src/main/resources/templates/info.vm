<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Louie(${contextPath}) - Info</title>

#parse("templates/header.vm")

  </head>
   
  <body>
#parse("templates/navbar.vm")

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    Info
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12 title-content">
                      <h1>Louie running at ${contextPath}</h1>
                    </div>
                </div>

#if (!$fails.isEmpty())
                <div class="row">
                    <div class="col-lg-12">

#foreach($service in $fails.keySet())
#set($error = $fails.get($service))
                        <div class="alert alert-danger" role="alert">
                            <strong>$service:</strong> $error
                        </div>
#end
                    </div>
                </div>
#end

#if (!$extras.isEmpty())
                <div class="row">
                    <div class="col-lg-12">
                        <div>
                            <hr>
#foreach($line in $extras)
$line
#end
                        </div>
                    </div>
                </div>
#end
            </div>
        </div>
    </div>

#parse("templates/footer.vm")
  </body>
</html>