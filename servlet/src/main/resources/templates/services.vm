<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Louie(${contextPath}) - Services</title>

#parse("templates/header.vm")

  </head>
   
  <body>
#parse("templates/navbar.vm")


    <div id="wrapper">
        
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    Services
                </li>
#foreach($service in $services)
#if(!$service.isReserved())
                <li>
                    <a href='?service=${service.serviceName}'>${service.serviceName}</a>
                </li>
#end
#end

                <li class="sidebar-brand">
                    Reserved Services
                </li>
#foreach($service in $services)
#if($service.isReserved())
                <li>
                    <a href='?service=${service.serviceName}'>${service.serviceName}</a>
                </li>
#end
#end
                <li class="sidebar-base">
                    <a href='?configs=all'>Config Overview</a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">

#if ($calls)
                <div class="row">
                    <div class="col-lg-12 title-content">
                      <h1>${service.serviceName}</h1>
                      $utils.servicePropertyString(${service.serviceName})
                    </div>
                </div>

#foreach($group in $groups.keySet())
                <div class="row">
                    <div class="col-lg-12 info-content">
                        <div class="page-header">
                            <h2>$group</h2>
                        </div>
                    </div>
                </div>
#foreach($method in $groups.get($group))
                <div class="row">
                  <div class="col-lg-12 info-content">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title call">$utils.methodSignature(${service.serviceName},$method)</h3>
                      </div>
                      <div class="panel-body">
                        ${method.description}
                      </div>
                    </div>
                  </div>
                </div>
#end
#end 
                <div class="row">
                    <div class="col-lg-12 info-content">
                        <div class="page-header">
                            <h2>Service Configurations</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-lg-12 info-content">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title call">${service.serviceName}</h3>
                      </div>
                      <div class="panel-body">
                        ${serviceconf.get($service.serviceName).printHtmlService()}
                      </div>
                    </div>
                  </div>
                </div>

#elseif($configs)
                <div class="row">
                    <div class="col-lg-12 title-content">
                      <h1>Service Configuration Overview</h1>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-12 info-content">
                        <div class="page-header">
                            <h2>Enabled Services</h2>
                        </div>
                    </div>
                </div>

#foreach($service in $serviceconf)     
#if($service.isEnabled() && !$service.isReserved())
           
                <div class="row">
                  <div class="col-lg-12 info-content">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title call"><a href='?service=${service.name}'>${service.name}</a></h3>
                      </div>
                      <div class="panel-body">
                        ${service.printHtmlService()}
                      </div>
                    </div>
                  </div>
                </div>
#end
#end
                <div class="row">
                    <div class="col-lg-12 info-content">
                        <div class="page-header">
                            <h2>Reserved Services</h2>
                        </div>
                    </div>
                </div>

#foreach($service in $serviceconf)     
#if($service.isEnabled() && $service.isReserved())
           
                <div class="row">
                  <div class="col-lg-12 info-content">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3 class="panel-title call">${service.name}</h3>
                      </div>
                      <div class="panel-body">
                        ${service.printHtmlService()}
                      </div>
                    </div>
                  </div>
                </div>
#end
#end
#else
                <div class="row">
                    <div class="col-lg-12 title-content">
                      <h1>Service Info</h1>
                      <p>Select a service on the left.</p>
                    </div>
                </div>
#end
            </div>
        </div>
    </div>

#parse("templates/footer.vm")

  </body>
</html>