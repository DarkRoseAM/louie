<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd">
    
    <requiredProperties>
        <requiredProperty key="service_titlecase">
            <defaultValue/>
        </requiredProperty>
        <requiredProperty key="service_lowercase">
            <defaultValue/>
        </requiredProperty>
    </requiredProperties>
    
    <modules>
        <module id="${rootArtifactId}-service" dir="service" name="${rootArtifactId}-service">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">      <!-- Ideally, this would tack the service name onto the end -->
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">                      <!-- Ideally, this would have a custom packaging? separate from main packaging? NAW. hardcode for rhythm version, else use package -->
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.proto</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/test/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-server" dir="server" name="${rootArtifactId}-server"> <!-- is the id or name wrong? does it matter? -->
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet encoding="UTF-8">
                    <directory>src/main/webapp</directory>
                    <includes>
                        <include>**/*.</include>
                        <include>**/*.ico</include>
                        <include>**/*.png</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main/webapp</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.jsp</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>

</archetype-descriptor>
